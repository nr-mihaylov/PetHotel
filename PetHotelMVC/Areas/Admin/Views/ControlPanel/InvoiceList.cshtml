@using DataModel.PetHotelORM
@model ICollection<vInvoiceList>


<section>

    <h1>Invoice list</h1>
    <hr />

    <table class="table table-hover">
        <thead class="thead-inverse">
            <tr>
                <th>Owner name</th>
                <th>Address</th>
                <th>City</th>
                <th>Species</th>
                <th>Pet name</th>
                <th>Employee</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Number of days</th>
                <th>Price per day</th>
                <th>Total price</th>
            </tr>
        </thead>
        <tbody>

            @foreach (vInvoiceList invoice in Model.ToArray<vInvoiceList>())
            {

                <tr>
                    <td>@invoice.name</td>
                    <td>@invoice.address</td>
                    <td>@invoice.city</td>
                    <td>@invoice.speciesName</td>
                    <td>@invoice.petName</td>
                    <td>@invoice.employee</td>
                    <td>@invoice.startDate</td>
                    <td>@invoice.endDate</td>
                    <td>@invoice.days</td>
                    <td>@invoice.price DKK</td>
                    <td>@invoice.total DKK</td>

                </tr>

            }

        </tbody>
    </table>

</section>